<?xml version="1.0" encoding="utf-8"?>
<!--
This layout shall be injected into readweb.xml. This provides a list of 
values that will be read with the CustomBaseAdapter. This will provide a multi-line
List View instead of having the default one or two lines at a time. Unlike the 
other layouts, this is very basic and does not have any buttons because it is 
being injected into readweb.xml.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/custom_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<!-- 	The text view that will present the product name. -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />
<!-- 	The text view that will present the price. -->

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!-- 	The text view that will present the invetory count -->

    <TextView
        android:id="@+id/inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!-- 	The text view that will present the sections. -->

    <TextView
        android:id="@+id/sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!-- 	The text view that will present the aisle. -->

    <TextView
        android:id="@+id/aisle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>